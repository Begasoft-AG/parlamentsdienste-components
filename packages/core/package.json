{
    "name": "@parlamentsdienste/pdcomponents-core",
    "version": "4.0.0-rc.1",
    "type": "module",
    "description": "Component Library for Swiss Parliamentary Services - Webcomponents Core Lib",
    "types": "dist/types/index.d.ts",
    "collection": "dist/collection/collection-manifest.json",
    "collection:main": "dist/collection/index.js",
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "default": "./dist/index.js"
        },
        "./loader": {
            "types": "./loader/index.d.ts",
            "default": "./loader/index.js"
        },
        "./components": {
            "types": "./components/index.d.ts",
            "default": "./components/index.js"
        },
        "./components/*.js": "./components/*.js",
        "./styles/*.css": "./dist/parlamentsdienstecore/*.css",
        "./utils": {
            "types": "./dist/types/utils/index.d.ts",
            "default": "./dist/collection/utils/index.js"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Begasoft-AG/parlamentsdienste-components.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist/",
        "loader/",
        "components/",
        "LICENSE",
        "README.md"
    ],
    "scripts": {
        "build": "stencil build",
        "start": "stencil build --dev --watch --serve",
        "test": "stencil test --spec --e2e",
        "test.watch": "stencil test --spec --e2e --watchAll",
        "generate": "stencil generate"
    },
    "dependencies": {
        "@a11y/focus-trap": "^1.0.5",
        "@juggle/resize-observer": "^3.4.0",
        "@lottiefiles/lottie-player": "^2.0.12",
        "@popperjs/core": "^2.11.8",
        "@stencil/sass": "3.0.7",
        "@stencil/store": "^2.1.3",
        "bootstrap": "^4.4.1",
        "flatpickr": "^4.6.13"
    },
    "devDependencies": {
        "@parlamentsdienste/angular-output-target": "4.0.0-rc.1",
        "@stencil/core": "^4.31.0",
        "@stencil/vue-output-target": "^0.10.8",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.13.5",
        "jest": "^29.7.0",
        "jest-cli": "^29.7.0",
        "puppeteer": "^24.3.0"
    },
    "license": "AGPL-3.0"
}
